<%- include('templates/header'); -%>


<div class="container">
    <div class ="jumbotron">
        <h1 style="text-align:center;"> New Author </h1>
        <div class='form-group row'>
    		<div class='col-sm-4'></div>
                <button class="col-sm-4 btn btn-info btn-block" onclick="location.href='/';" > Cancel </button> 
            <div class="col-sm-4"></div>    
    		<div class='col-sm-4'></div>
        </div>
    </div>


    <form action='/update/<%=author.authorId%>?_method=PUT' method="POST" >

        <div class="form-group row">
            <label style="text-align:right;" for="Firstname" class="col-sm-4 col-form-label">First name:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="Firstname" name="Firstname" value='<%=author.firstName%>'>
            </div>
        </div>
        
        <div class="form-group row">
            <label style="text-align:right;" for="Lastname" class="col-sm-4 col-form-label">Last name:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="Lastname" name="Lastname" value='<%=author.lastName%>'>
            </div>
        </div>
        
        
        <div class="form-group row">
            <label style="text-align:right;" for="sex" class="col-sm-4 col-form-label">Sex:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="sex" name="sex"  value='<%=author.sex%>'>
            </div>
        </div>
        
        <div class="form-group row">
            <label style="text-align:right;" for="profession" class="col-sm-4 col-form-label">Profession: </label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="profession" name="profession"  value='<%=author.profession%>'>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-4"> </div>
            <div class="col-sm-4">
                <button class="btn btn-primary btn-block"> Save </button> 
            </div>
        </div>
        <div class="col-sm-4"></div>            
    </form>
</div>

<%- include('templates/footer'); -%>
