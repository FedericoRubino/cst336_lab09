<%- include('templates/header'); -%>

<div class="container">
    <div class ="jumbotron">
        <h1 style="text-align:center;"> Search by Author Name </h1>
        <br>
		<form action='/quoteAuthor' method='GET'>
			<div class='form-group row'>
				<label style="text-align:right;" for='name' class='col-sm-4 col-form-label'></label>
				<div class='col-sm-4'>
					<select id="name" name="name">
					    <%var i = 0;%>
						<%fullnames.forEach(function(name){%>
				            <option id="name" name ="name" value='<%=name%>'><%=name%></option>
				        <%});%>
					</select>
				</div>
			</div>
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>


    </div>
</div>

<div class="container">
    <div class ="jumbotron">
        <h1 style="text-align:center;"> Quotes by Keyword </h1>
        <br>
        <form action='/quoteKeyword' method="GET" >
            
            <div class="form-group row">
                <label style="text-align:right;" for="keyword" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="keyword" name="keyword" placeholder='Keyword'>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-4"> </div>
                <div class="col-sm-4">
                    <button class="btn btn-primary btn-block"> Search Quote </button> 
                </div>
            </div>
            <div class="col-sm-4"></div>            
        </form>
    </div>
</div>

